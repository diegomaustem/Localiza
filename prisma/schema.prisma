generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        String @id @unique
  full_name String 
  email     String @unique
  address   String 
  gender    String
  telephone String 
  password  String
  creation_date DateTime @default(now())
  update_date   DateTime @updatedAt

  privilege_id String
  privilege   privileges @relation(fields: [privilege_id], references: [id])
}

model privileges {
  id   String @id @unique
  name String 
  creation_date DateTime @default(now())
  update_date   DateTime @updatedAt

  users users[]
}


