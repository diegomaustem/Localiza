generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id             String  @id @unique          
  nome           String
  sobrenome      String
  cpf            BigInt  @unique
  rg             BigInt  @unique
  email          String  @unique
  senha          String?
  endereco       String
  telefone       String
  numeroCarteira BigInt @unique
  tipoCarteira   String

  criacaoData     DateTime @default(now())
  atualizacaoData DateTime @updatedAt
}